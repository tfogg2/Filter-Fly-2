  <div id="collection_index">
    <h1>Product Types</h1>
    
    <%- if @product_types.any? %>
        

      <div class="table">
        <div class="tbl-content">
          <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
              <% @product_types.each do |product_type| %>
                <tr class="row">
                  <td><%= link_to product_type.title, category_product_type_tags_path(@category, product_type), { :class=>"product_type_title" } %></td>
                  <td><%= link_to 'Edit', edit_category_product_type_path(@category, product_type) %></td>
                  <td><%= button_to 'X', category_product_type_path(@category, product_type), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <%- end %>

      <button class="modalBtn" id="newBtn">New Product Type</button>
      <div id="myModal" class="modal">

        <!-- Modal content  <div id="newCategory"></div> <div id="newType"></div> -->
        <div class="modal-content">
          <span class="close">&times;</span>
          <div id="newType"></div>
        </div>

      </div>
    <%- if @product_types.any? %>
      <div id="begin"><h2>Select a type to continue.</h2></div>
    <%- else %>
      <div id="begin"><h2>Create and select a type to continue.</h2></div>
    <%- end %>
  </div>


