<div id="navbar">
  <%= render 'shared/navbar' %>
</div>
<div id="collection_index">
    <div class="collection_search">


    </div>
    <table>
        <thead>
          <tr>
            <th>Collections</th>
            <th>Filters</th>
            <th>Categories</th>
            <th>Types</th>
            <th>Tags</th>

            <th>Products</th>
            <!-- <th colspan="3"></th> -->

          </tr>
        </thead>

        <tbody >

        <%- if @customCollections.any? or @smartCollections.any? %>
          
          <% @customCollections.each do |collection| %>
            <tr class="row">
              <td class="collectionTitle"><%= collection.title %></td>
              <td><button class="nav_btn"><%= link_to "Add Filters", categories_path(shopify_collection_id:collection.id, shopify_collection_title:collection.title) %></button></td>
              <td><%# collection.categories.count %>0</td>
              <td><%# collection.categories.count %>0</td>
              <td><%# collection.categories.count %>0</td>
               <td><button class="product_btn"><%= link_to "Products", products_path(shopify_collection_id:collection.id, shopify_collection_title:collection.title) %></button></td>
            </tr>
          <% end %>

          <%# paginate @customCollections  %>




          <% @smartCollections.each do |collection| %>
          <tr class="row">
              <td class="collectionTitle"><%= collection.title %></td>
              <td><button class="nav_btn"><%= link_to "Add Filters", categories_path(shopify_collection_id:collection.id, shopify_collection_title:collection.title) %></button></td>
              <td><%# collection.categories.count %>0</td>
              <td><%# collection.categories.count %>0</td>
              <td><%# collection.categories.count %>0</td>
              <td><button class="product_btn"><%= link_to "Products", products_path(shopify_collection_id:collection.id, shopify_collection_title:collection.title) %></button></td>

            </tr>
          <% end %>

          <%# paginate @smartCollections  %>
        <%- else %>
          <p>You should create these on shopify and then return</p>
        <%- end %>
      </tbody>
    </table>


</div>

