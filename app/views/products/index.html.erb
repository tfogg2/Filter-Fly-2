<%= render 'shared/breadcrumb' %>

<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.id %></td>
      </tr>
      
    <% end %>
  </tbody>
  <div id="form-selects">
  <%= render 'form', product: @product %>
</div>
</table>

<div id="productShow"></div>
<div id="productTypeShow"></div>
<div id="chosen"></div>




