<div class="page">
  <%# render 'shared/breadcrumb' %>
  <p id="notice"><%= notice %></p>
  <div id="navbar">
    <%= render 'shared/navbar' %>
  </div>
  <div id="index">
    <% if @categories.any? %>
      <h1>Categories</h1>

      <table>
        <thead>
          <tr>
            <th>Title</th>

            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= link_to category.title, category_product_types_path(category) %></td>
              <td><%= link_to 'Edit', edit_category_path(category) %>    |</td>
              <td><%= button_to 'Destroy', category, data: { confirm: 'Are you sure?' }, method: :delete %></td>
            </tr>
          <% end %>



        </tbody>
      </table>
    <%- end %>
    <button class="modalBtn">New Category</button>
    <div id="myModal" class="modal">

    <!-- Modal content  <div id="newCategory"></div> -->
    <div class="modal-content">
      <span class="close">&times;</span>
      <div id="newCategory"></div>
    </div>

  </div>
    
  </div>
</div>

<%# link_to 'Product Types', category_product_types_path(category) %>  
<%# category.handle %>