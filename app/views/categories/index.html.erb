<div class="page">
  <%# render 'shared/breadcrumb' %>
  <p id="notice"><%= notice %></p>
  <!-- <div id="navbar">
    <%# render 'shared/navbar' %>
  </div> -->
  <div id="index">
    <% if @categories.any? %>
      <h1>Categories</h1>

      <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
          <thead>
            <tr>
              <th>Title</th>

              <th colspan="3"></th>
            </tr>
          </thead>
        </table>
      </div>
      <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <% @categories.each do |category| %>
              <tr class="row">
                <td><%= link_to category.title, category_product_types_path(category) %></td>
                <td><%= link_to 'Edit', edit_category_path(category) %>    |</td>
                <td><%= button_to 'Destroy', category, data: { confirm: 'Are you sure?' }, method: :delete %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
    <%- end %>
    <button class="modalBtn">New Category</button>
    <div id="myModal" class="modal">

    <!-- Modal content  <div id="newCategory"></div> -->
    <div class="modal-content">
      <span class="close">&times;</span>
      <div id="newCategory"></div>
    </div>

  </div>
    
  </div>
</div>

<%# link_to 'Product Types', category_product_types_path(category) %>  
<%# category.handle %>