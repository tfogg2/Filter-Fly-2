      <div class="table">
        <div class="tbl-content">
          <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
                <% @categories.each do |category| %>
                  <tr class="row">
                    <td><%= link_to category.title, category_product_types_path(category) %></td>
                    <td><%= link_to 'Edit', edit_category_path(category) %></td>
                    <td><%= button_to 'X', category, data: { confirm: 'Are you sure?' }, method: :delete %></td>
                  </tr>
                <% end %>
              </tbody>
          </table>
        </div>
      </div>
    <%- end %>
    <button class="modalBtn">New Category</button>
    <div id="myModal" class="modal">

    <!-- Modal content  <div id="newCategory"></div> -->
    <div class="modal-content">
      <span class="close">&times;</span>
      <div id="newCategory"></div>
    </div>
    <%- if @categories %>
      <div id="begin"><h2>Select a category to continue.</h2></div>
    <%- else %>
      <div id="begin"><h2>Create and select a category to continue.</h2></div>
    <%- end %>
